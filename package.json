{
  "private": true,
  "scripts": {
    "dev": "npm run development",
    "dev:vite": "vite",
    "dev:ssr": "node server.ts",
    "build": "vite build",
    "build:ssr": "vite build --ssr",
    "fix:eslint": "eslint --ext .ts,.vue resources/scripts/ --fix",
    "fix:prettier": "prettier --write --loglevel warn 'resources/scripts/**/*.vue'",
    "fix-code-style": "npm run fix:prettier && npm run fix:eslint",
    "prod": "npm run production",
    "production": "vite build --production && npm run ssr:serve",
    "heroku-postbuild": "npm run prod",
    "ssr:build": "vite build --production",
    "ssr:serve": "node public/js/ssr.js"
  },
  "dependencies": {
    "@inertiajs/inertia": "^0.11.0",
    "@inertiajs/inertia-vue3": "^0.6.0",
    "@inertiajs/progress": "^0.2.7",
    "@inertiajs/server": "^0.1.0",
    "@popperjs/core": "^2.11.0",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/server-renderer": "^3.2.27",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.4.1",
    "eslint-plugin-vue": "^8.2.0",
    "lodash": "^4.17.21",
    "postcss": "^8.4.4",
    "postcss-import": "^12.0.1",
    "postcss-nesting": "^7.0.1",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwind": "^2.2.12",
    "tailwindcss": "^2.0.3",
    "uuid": "^8.3.2",
    "vue": "^3.2.27",
    "vue-loader": "^16.2.0",
    "webpack-node-externals": "^3.0.0"
  },
  "devDependencies": {
    "h3": "^1.0.1",
    "listhen": "^1.0.1",
    "vite": "^3.2.4",
    "vite-plugin-laravel": "^0.2.2"
  }
}
